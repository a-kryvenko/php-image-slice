{
    "name": "antey/image-resize-optimal",
    "description": "Library for slicing image into a pieces",
    "keywords": ["php", "image", "slice", "divide", "cut"],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Antey\\ImageSlice\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Antey\\ImageSlice\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Andriy Kryvenko",
            "homepage": "https://a-krivenko.com/"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "ext-gd": "*",
        "ext-fileinfo": "*",
        "gumlet/php-image-resize": "2.0.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpunit/php-code-coverage": "^9.2"
    }
}
